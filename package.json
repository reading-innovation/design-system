{
  "name": "@reading-innovation/design-system",
  "version": "1.0.0",
  "description": "Reading Innovation's DaisyUI-based design system for Next.js applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "tailwind.config.js",
    "postcss.config.js",
    "src/styles",
    "src/components",
    "src/utils"
  ],
  "scripts": {
    "build": "tsc && yarn build:css",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css",
    "dev": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch",
    "clean": "rm -rf dist",
    "demo": "yarn build && python3 -m http.server 3000 --directory .",
    "postinstall": "yarn build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "daisyui": "^4.4.0",
    "postcss": "^8.4.31",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.5"
  },
  "keywords": [
    "design-system",
    "daisyui",
    "tailwind",
    "react",
    "nextjs",
    "components",
    "reading-innovation"
  ],
  "author": "Reading Innovation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reading-innovation/design-system.git"
  },
  "homepage": "https://github.com/reading-innovation/design-system#readme",
  "publishConfig": {
    "access": "public"
  }
}
